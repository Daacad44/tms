# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tms_db?schema=public"

# JWT Secrets (Generate random strings for production)
JWT_ACCESS_SECRET="your-secret-access-key-change-this-in-production"
JWT_REFRESH_SECRET="your-secret-refresh-key-change-this-in-production"

# Token Expiry
ACCESS_TOKEN_EXPIRES="15m"
REFRESH_TOKEN_EXPIRES="30d"

# Server
PORT=4000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SMS (Optional - for notifications)
# SMS_API_KEY=your-sms-api-key
# SMS_SENDER=YourCompany
